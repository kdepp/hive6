

mixin gameList(list)
  ul.game-list
    each game in list
      li.game-item
        a.game-image(href='/game/' + game._id  target='_blank')
          img(src='/static/img/default_game_pic.jpg')
        a.opponent(href='/game/' + game._id  target='_blank')
          span VS&nbsp;&nbsp;
          span
            if game.opponent
              | #{game.opponent.username}
            else
              | [待定]
        a.game-status(href='/game/' + game._id  target='_blank')
          span #{game.statusName}
          if game.status === 2
            span(class='game-result-' + game.gameResult) &nbsp(#{['负', '平', '胜'][game.gameResult + 1]})
        div.game-starttime 开始时间：#{game.createTime}
        div.game-updatetime 更新时间：#{game.updateTime}
