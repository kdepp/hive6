extends frame.pug

block title
  | 复盘在线对战

block append css
  link(rel='stylesheet' href='/static/css/game.css')

block append js
  if !error
    include include/web_game_js.pug
    script.
      initGame({
        playerTypes: [3, 3],
        playerNames: !{JSON.stringify(playerNames)},
        gameId: !{JSON.stringify(_id.toString())},
      });

block content
  if error
    div No replay for this game
  else
    div.game-box
      div#bar1.bar
      div#bar2.bar
      div#canvas_container.bar
      div#replay_container
